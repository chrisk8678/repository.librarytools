<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.library.integration.tool" name="Library Integration Tool" version="0.1.0" provider-name="patrick-klein">
  <requires>
    <import addon="xbmc.python" version="2.24.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="script.module.beautifulsoup4" version="1.0.0"/>
    <import addon="script.module.simplejson" version="1.0.0"/>
  </requires>

  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>

  <extension point="kodi.context.item">
    <menu id="kodi.core.main">
      <item library="context.py">
        <label>32000</label>
        <visible>String.StartsWith(ListItem.Path,plugin) + !Container.Content(addons)</visible>
      </item>
      <item library="context2.py">
        <label>32001</label>
        <visible>String.StartsWith(ListItem.Path,plugin) + !Container.Content(addons)</visible>
      </item>
    </menu>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary lang="en">Allows video add-on content to be integrated into your library.</summary>
    <description lang="en">
      See README for full description.
    </description>
    <disclaimer lang="en">
      Must choose a Managed Folder in settings before running
    </disclaimer>
    <language></language>
    <platform>osx linux</platform>
    <license>GPL v2.0</license>
    <forum></forum>
    <website></website>
    <source>https://github.com/patrick-klein/script.library.integration.tool</source>
  </extension>

  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <screenshot>resources/screenshot-01.jpg</screenshot>
    <screenshot>resources/screenshot-02.jpg</screenshot>
    <screenshot>resources/screenshot-03.jpg</screenshot>
  </assets>
  <news>Initial Release</news>

</addon>
